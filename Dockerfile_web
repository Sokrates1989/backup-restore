# Dockerfile for Backup-Restore Web UI
# Serves static web UI and proxies API requests to the backend app service

FROM node:20-alpine AS keycloak_js

WORKDIR /app

# Install keycloak-js + esbuild and bundle adapter as IIFE for browser script tag
RUN npm init -y >/dev/null 2>&1 \
    && npm install --no-fund --no-audit keycloak-js@26.0.0 esbuild \
    && echo "import Keycloak from 'keycloak-js'; window.Keycloak = Keycloak;" > /app/entry.js \
    && npx esbuild /app/entry.js --bundle --format=iife --global-name=KeycloakModule --outfile=/app/keycloak.js

FROM nginx:alpine

# Install envsubst for nginx config templating
RUN apk add --no-cache gettext

# Copy website files
COPY website/ /usr/share/nginx/html/
COPY --from=keycloak_js /app/keycloak.js /usr/share/nginx/html/keycloak-adapter.js

# Default cache settings for static assets (can be overridden via docker-compose env).
ENV ASSET_CACHE_CONTROL="public, immutable"
ENV ASSET_EXPIRES="7d"

# Keycloak configuration defaults (can be overridden via docker-compose env)
ENV KEYCLOAK_ENABLED=false
ENV KEYCLOAK_URL=http://localhost:9090
ENV KEYCLOAK_REALM=backup-restore
ENV KEYCLOAK_CLIENT_ID=backup-restore-frontend

# Copy nginx configuration template
COPY docker/nginx/default.conf.template /etc/nginx/templates/default.conf.template

# Copy entrypoint script for generating keycloak config
COPY docker/nginx/generate-keycloak-config.sh /docker-entrypoint.d/00-generate-keycloak-config.sh
RUN chmod +x /docker-entrypoint.d/00-generate-keycloak-config.sh

# Create version file (will be overwritten during build if IMAGE_TAG is set)
ARG IMAGE_TAG=dev
RUN echo "{\"version\": \"${IMAGE_TAG}\"}" > /usr/share/nginx/html/version.json

# Expose port 80
EXPOSE 80

# nginx will automatically process templates in /etc/nginx/templates/
# and output to /etc/nginx/conf.d/ on startup
CMD ["nginx", "-g", "daemon off;"]
